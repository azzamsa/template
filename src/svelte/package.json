{
  "name": "mold",
  "private": true,
  "version": "1.0.1",
  "type": "module",
  "scripts": {
    "fmt:eslint": "eslint --fix .",
    "fmt:prettier": "prettier --plugin-search-dir . --write .",
    "fmt": "run-p fmt:*",
    "fmt:check": "prettier --plugin-search-dir . --check .",
    "lint:eslint": "eslint .",
    "lint:svelte": "svelte-check --tsconfig ./tsconfig.json --workspace src",
    "lint": "run-p lint:*",
    "dev": "vite --port 4173",
    "preview": "vite preview",
    "build:vite": "vite build"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^2.0.2",
    "@tsconfig/svelte": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.29.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "eslint-plugin-tailwindcss": "^3.7.1",
    "eslint-config-prettier": "^8.5.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.20",
    "prettier": "^2.8.1",
    "prettier-plugin-svelte": "^2.9.0",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "svelte": "^3.55.0",
    "svelte-check": "^2.10.2",
    "svelte-preprocess": "^5.0.0",
    "tailwindcss": "^3.2.4",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.1"
  }
